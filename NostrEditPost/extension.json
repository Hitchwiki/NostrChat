{
	"name": "NostrEditPost",
	"version": "0.0.1",
	"author": "MediaWiki Nostr Extensions",
	"url": "https://github.com/example/mediawiki-nostr",
	"descriptionmsg": "nostreditpost-desc",
	"license-name": "MIT",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.42.0"
	},
	"config": {
		"NostrEditPostEnabled": {
			"value": false,
			"description": "Enable posting edits to Nostr"
		},
		"NostrNsec": {
			"value": null,
			"description": "Private key (nsec) for signing Nostr events (optional)"
		}
	},
	"AutoloadClasses": {
		"NostrEditPost\\Hooks": "includes/Hooks.php",
		"NostrEditPost\\NostrClient": "includes/NostrClient.php"
	},
	"Hooks": {
		"PageContentSaveComplete": "NostrEditPost\\Hooks::onPageContentSaveComplete"
	},
	"MessagesDirs": {
		"NostrEditPost": [
			"i18n"
		]
	},
	"manifest_version": 2
}

